---
// Dashboard to monitor webhook activity with live data
const title = "WHMCS to Zoho Sync Dashboard";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem;
      }
      
      .container {
        max-width: 1400px;
        margin: 0 auto;
      }
      
      .header {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
      }
      
      h1 {
        color: #2d3748;
        font-size: 2rem;
        margin-bottom: 0.5rem;
      }
      
      .subtitle {
        color: #718096;
        font-size: 1rem;
      }
      
      .status-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
      }
      
      .card {
        background: white;
        padding: 1.5rem;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      
      .card-title {
        color: #718096;
        font-size: 0.875rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.5rem;
      }
      
      .card-value {
        color: #2d3748;
        font-size: 2rem;
        font-weight: bold;
      }
      
      .status-indicator {
        display: inline-block;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        margin-right: 0.5rem;
        animation: pulse 2s infinite;
      }
      
      .status-active {
        background-color: #48bb78;
        box-shadow: 0 0 0 4px rgba(72, 187, 120, 0.2);
      }
      
      .status-waiting {
        background-color: #ed8936;
        box-shadow: 0 0 0 4px rgba(237, 137, 54, 0.2);
      }
      
      @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
      }
      
      .info-section {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
      }
      
      .info-section h2 {
        color: #2d3748;
        font-size: 1.5rem;
        margin-bottom: 1rem;
      }
      
      .endpoint-box {
        background: #f7fafc;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        padding: 1rem;
        margin: 1rem 0;
        font-family: 'Courier New', monospace;
        font-size: 0.875rem;
        color: #2d3748;
        word-break: break-all;
      }
      
      .webhook-data {
        background: #f7fafc;
        border-left: 4px solid #667eea;
        padding: 1.5rem;
        border-radius: 8px;
        margin-top: 1rem;
      }
      
      .webhook-data h3 {
        color: #2d3748;
        font-size: 1.25rem;
        margin-bottom: 1rem;
      }
      
      .data-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
      }
      
      .data-item {
        background: white;
        padding: 1rem;
        border-radius: 8px;
      }
      
      .data-label {
        color: #718096;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.25rem;
      }
      
      .data-value {
        color: #2d3748;
        font-size: 1.125rem;
        font-weight: 600;
      }
      
      .no-data {
        text-align: center;
        padding: 2rem;
        color: #718096;
        font-style: italic;
      }
      
      .refresh-info {
        text-align: center;
        color: #718096;
        font-size: 0.875rem;
        margin-top: 1rem;
      }
      
      .badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        background: #edf2f7;
        color: #4a5568;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
        margin-right: 0.5rem;
      }
      
      .badge-success {
        background: #c6f6d5;
        color: #22543d;
      }
      
      .badge-info {
        background: #bee3f8;
        color: #2c5282;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>ðŸ”„ {title}</h1>
        <p class="subtitle">Real-time webhook monitoring â€¢ Auto-refreshes every 5 seconds</p>
      </div>

      <div class="status-cards">
        <div class="card">
          <div class="card-title">Webhook Status</div>
          <div class="card-value">
            <span class="status-indicator" id="statusIndicator"></span>
            <span id="statusText">Checking...</span>
          </div>
        </div>
        
        <div class="card">
          <div class="card-title">Last Webhook</div>
          <div class="card-value" style="font-size: 1rem;" id="lastWebhookTime">
            Never
          </div>
        </div>
        
        <div class="card">
          <div class="card-title">Environment</div>
          <div class="card-value" style="font-size: 1.25rem;">
            <span class="badge badge-info">Cloudflare Workers</span>
          </div>
        </div>
      </div>

      <div class="info-section">
        <h2>ðŸ“¡ Webhook Endpoint</h2>
        <p style="margin-bottom: 1rem; color: #4a5568;">
          Use this URL in your WHMCS hook:
        </p>
        <div class="endpoint-box">
          https://whmcs-zoho-sync.ali-rami.workers.dev/api/whmcs-webhook
        </div>
      </div>

      <div class="info-section">
        <h2>ðŸ“Š Last Received Webhook</h2>
        <div id="webhookDataContainer">
          <div class="no-data">
            Waiting for webhook data... <br>
            Mark an invoice as paid in WHMCS to test.
          </div>
        </div>
        <div class="refresh-info">
          <span id="refreshCounter">Refreshing in 5s...</span>
        </div>
      </div>

      <div class="info-section">
        <h2>ðŸš€ Quick Start</h2>
        <ol style="line-height: 2; color: #4a5568; padding-left: 1.5rem;">
          <li>Copy the WHMCS hook file to: <code>/includes/hooks/astro_webhook.php</code></li>
          <li>Update the webhook URL in the hook file (line 128)</li>
          <li>Mark a test invoice as paid in WHMCS</li>
          <li>Watch this dashboard update automatically!</li>
        </ol>
      </div>
    </div>

    <script>
      let countdown = 5;
      let countdownInterval;
      
      async function fetchWebhookData() {
        try {
          const response = await fetch('/api/whmcs-webhook');
          const data = await response.json();
          
          // Update status
          const statusIndicator = document.getElementById('statusIndicator');
          const statusText = document.getElementById('statusText');
          
          if (data.last_webhook) {
            statusIndicator.className = 'status-indicator status-active';
            statusText.textContent = 'Active';
            
            // Update last webhook time
            const lastTime = new Date(data.last_webhook.received_at);
            const timeAgo = getTimeAgo(lastTime);
            document.getElementById('lastWebhookTime').textContent = timeAgo;
            
            // Display webhook data
            displayWebhookData(data.last_webhook);
          } else {
            statusIndicator.className = 'status-indicator status-waiting';
            statusText.textContent = 'Waiting';
            document.getElementById('lastWebhookTime').textContent = 'Never';
          }
        } catch (error) {
          console.error('Error fetching webhook data:', error);
          const statusIndicator = document.getElementById('statusIndicator');
          const statusText = document.getElementById('statusText');
          statusIndicator.className = 'status-indicator status-waiting';
          statusText.textContent = 'Error';
        }
        
        // Reset countdown
        countdown = 5;
      }
      
      function displayWebhookData(webhook) {
        const container = document.getElementById('webhookDataContainer');
        
        if (!webhook.invoice || !webhook.client) {
          container.innerHTML = '<div class="no-data">No valid webhook data received yet.</div>';
          return;
        }
        
        container.innerHTML = `
          <div class="webhook-data">
            <h3>Invoice #${webhook.invoice.number || webhook.invoice.id}</h3>
            <div class="data-grid">
              <div class="data-item">
                <div class="data-label">Client</div>
                <div class="data-value">${webhook.client.name || 'N/A'}</div>
              </div>
              <div class="data-item">
                <div class="data-label">Email</div>
                <div class="data-value">${webhook.client.email || 'N/A'}</div>
              </div>
              <div class="data-item">
                <div class="data-label">Invoice Total</div>
                <div class="data-value">$${webhook.invoice.total || '0.00'}</div>
              </div>
              <div class="data-item">
                <div class="data-label">Payment Method</div>
                <div class="data-value">${webhook.invoice.payment_method || 'N/A'}</div>
              </div>
              <div class="data-item">
                <div class="data-label">Invoice Date</div>
                <div class="data-value">${webhook.invoice.date || 'N/A'}</div>
              </div>
              <div class="data-item">
                <div class="data-label">Received At</div>
                <div class="data-value">${new Date(webhook.received_at).toLocaleTimeString()}</div>
              </div>
            </div>
            
            ${webhook.items && webhook.items.length > 0 ? `
              <div style="margin-top: 1.5rem;">
                <div class="data-label">Invoice Items:</div>
                <div style="margin-top: 0.5rem;">
                  ${webhook.items.map(item => `
                    <div style="background: white; padding: 0.75rem; border-radius: 6px; margin-bottom: 0.5rem;">
                      <strong>${item.product || item.description}</strong> - $${item.amount}
                    </div>
                  `).join('')}
                </div>
              </div>
            ` : ''}
          </div>
        `;
      }
      
      function getTimeAgo(date) {
        const seconds = Math.floor((new Date() - date) / 1000);
        
        if (seconds < 60) return `${seconds}s ago`;
        if (seconds < 3600) return `${Math.floor(seconds / 60)}m ago`;
        if (seconds < 86400) return `${Math.floor(seconds / 3600)}h ago`;
        return `${Math.floor(seconds / 86400)}d ago`;
      }
      
      function updateCountdown() {
        const counterElement = document.getElementById('refreshCounter');
        if (countdown > 0) {
          counterElement.textContent = `Refreshing in ${countdown}s...`;
          countdown--;
        } else {
          counterElement.textContent = 'Refreshing...';
          fetchWebhookData();
        }
      }
      
      // Initial fetch
      fetchWebhookData();
      
      // Update countdown every second
      countdownInterval = setInterval(updateCountdown, 1000);
      
      // Fetch data every 5 seconds
      setInterval(fetchWebhookData, 5000);
    </script>
  </body>
</html>